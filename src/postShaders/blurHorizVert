#version 140

in vec2 pos;

out vec2 blurTextureCoords[11];

uniform float targetWidth;

void main(void){

	gl_Position = vec4(pos, 0.0, 1.0);
	vec2 textureCoords = pos * 0.5 + 0.5;
	float pixelSize = 1.0/targetWidth;
	
	for(int i=-5;i<=5;i++){
		blurTextureCoords[i+5] = textureCoords + vec2(pixelSize * i, 0.0);
	}
	
}